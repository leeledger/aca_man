# Environment variables example file
# Copy this file to .env and fill in the values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/academy_task_manager?schema=public"

# NextAuth Configuration
NEXTAUTH_URL=https://your-production-domain.com
# Generate a strong secret key for production: `openssl rand -base64 32`
NEXTAUTH_SECRET=your-nextauth-secret-key

# Kakao OAuth Configuration
# These values need to be updated after Kakao Developer Console approval
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret

# Kakao Message API Configuration
KAKAO_ADMIN_KEY=your-kakao-admin-key
KAKAO_TASK_STATUS_TEMPLATE_ID=your-task-status-template-id
KAKAO_TASK_REMINDER_TEMPLATE_ID=your-task-reminder-template-id

# Application Configuration
NODE_ENV=production

# Email Service Configuration (for password reset and notifications)
EMAIL_SERVER=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email-username
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@example.com

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Task Scheduler Configuration
REMINDER_HOURS_BEFORE=3
ENABLE_SCHEDULER=true

# Upstash Redis (for rate limiting in production)
UPSTASH_REDIS_REST_URL=your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token